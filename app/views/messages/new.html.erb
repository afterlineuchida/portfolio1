<div class="message-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Message</h1>
        <%= form_for @message do |f| %>
        <div class="form-group">
          <%= f.label :content, "メッセージ" %>
          <%=f.text_area :content, class: 'form-control' %> 
        </div>
        
        <%= f.hidden_field :to_user_id, :value => params[:to_user_id] %>
        <%= f.submit '送信', class: 'btn-brack btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>