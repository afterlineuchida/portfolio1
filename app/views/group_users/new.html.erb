<div class="group_user-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8 users-new-container">
        <h1 class="profile-title">プロフィール設定</h1>
        <%= form_for @group_user do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>
          
          <div>
            <p><label></label></p>
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :gender %>
            <%= f.text_area :gender, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :prefectures %>
            <%= f.text_area :prefectures, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :part %>
            <%= f.text_area :part, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :genre %>
            <%= f.text_area :genre, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :artist %>
            <%= f.text_area :artist, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :url %>
            <%= f.text_area :url, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
      
         <%= f.submit "登録", class: 'btn-block btn-primary' %>
        <% end %>
        <%= link_to 'ログインはこちら', login_path, class: 'login-text' %>
      </div>
    </div>
  </div>
</div>